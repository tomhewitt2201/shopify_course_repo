{% schema %}
    {
        "name" : "Template 404",
        "tag" : "section",
        "class" : "flex items-center justify-center text-center py-7 h-screen",
        "settings": [
            {
                "type" : "text",
                "id" : "title",
                "default" : "404",
                "label" : "Title",
                "info" : "404 heading title"
            },
            {
                "type" : "text",
                "id" : "subtext_title",
                "default" : "The page that you're looking for is not found",
                "label" : "404 Subtext Title",
                "info" : "404 subheading"
            },
            {
                "type" : "text",
                "id" : "button_label",
                "default" : "Back to homepage",
                "label" : "Button Label",
                "info" : "Text appears in button"
            },
            {
                "type" : "url",
                "id" : "button_url",
                "label" : "Button URL",
            }
        ]
    }
{% endschema %}

<!-- set button url -->
{%  if section.settings.button_url == blank %}
    {% assign shop_url = shop.secure_url %}
{% else %}
    {% assign shop_url = section.settings.button_url %}
{%  endif %}

<div class="max-w-md">

    <!-- heading -->
    <div class="text-5xl font-bold my-4">{{ section.settings.title }}</div>
    
    <!-- subheading -->
    <div class="my-4">
        <p class="text-base md:text-xl leading-normal">{{ section.settings.subtext_title }}</p>
    </div>

    <!-- button -->
    <div class="my-4">
        <a href="{{ shop_url }}" class="transition button px-4 inline py-2 text-base font-medium bg-green-600 hover:bg-green-800 text-white shadow">{{ section.settings.button_label }}</a>
    </div>

</div>